{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "paths": {
      "@/components/*": ["./src/shared/components/*"],
      "@/utils/*": ["./src/shared/lib/utils/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/assets/*": ["./src/shared/assets/*"],
      "@/context/*": ["./src/shared/context/*"],
      "@/*": ["./src/*"],
      "@ui": ["../packages/ui/src"],
      "@ui/*": ["../packages/ui/src/*"],
      "@/tests/*": ["./tests/*"]
    }
  }
}
